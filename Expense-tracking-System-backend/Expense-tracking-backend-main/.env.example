# =============================================================================
# Expense Tracking System - Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# NEVER commit .env files with real secrets to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:5000/expense_tracker
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=your-secure-password-here

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# CRITICAL: Use a strong, unique secret key (minimum 32 characters)
# Generate with: openssl rand -base64 64
JWT_SECRET_KEY=your-production-jwt-secret-key-minimum-32-characters

# -----------------------------------------------------------------------------
# Mail Configuration (Brevo/SendGrid/SMTP)
# -----------------------------------------------------------------------------
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password

# -----------------------------------------------------------------------------
# Service Discovery (Eureka)
# -----------------------------------------------------------------------------
EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://localhost:8761/eureka

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins (no wildcards in production)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# -----------------------------------------------------------------------------
# Google OAuth2
# -----------------------------------------------------------------------------
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# -----------------------------------------------------------------------------
# Kafka Configuration
# -----------------------------------------------------------------------------
SPRING_KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# -----------------------------------------------------------------------------
# Redis Configuration (if using caching)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# -----------------------------------------------------------------------------
# Docker Compose Overrides (for docker-compose.yml)
# -----------------------------------------------------------------------------
MYSQL_ROOT_PASSWORD=your-secure-mysql-password
MYSQL_DATABASE=expense_tracker
MYSQL_HOST_PORT=127.0.0.1:5000
REDIS_HOST_PORT=127.0.0.1:6379
KAFKA_HOST_PORT=127.0.0.1:9092
